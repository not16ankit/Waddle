<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp"
    android:orientation="horizontal"
    android:background="@color/back"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Space
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@id/lay"/>
    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_weight="2"
            android:layout_marginStart="3dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/double_files_back">
<androidx.cardview.widget.CardView
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_height="130dp"
    app:cardElevation="20dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/f1"
    app:cardBackgroundColor="@color/back"
    android:layout_width="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <Space
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"/>
            <ImageView
                android:layout_weight="1.9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/fileicon1"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"/>
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6">
            <LinearLayout
                android:id="@+id/textlay"
                android:layout_width="0dp"
                android:layout_weight="1.7"
                android:layout_height="match_parent"
                android:orientation="vertical">
    <TextView
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/name1"
        android:textColor="@color/blue2"
        android:text="Filename"
        android:textSize="15dp"
        android:layout_weight="0.3"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:textColor="@color/blue2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:text="Date"
        android:textSize="10dp"
        android:id="@+id/date1"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/download1"
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:src="@android:drawable/stat_sys_download"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/delete1"
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:src="@android:drawable/ic_menu_delete"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/double_files_back"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_marginRight="3dp"
            android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        app:cardBackgroundColor="@color/back"
        android:layout_height="130dp"
        app:cardElevation="20dp"
        android:id="@+id/f2"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <Space
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"/>
                    <ImageView
                        android:layout_weight="1.9"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/fileicon2"
                        />
                    <Space
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"/>
                </LinearLayout>
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6">
                <LinearLayout
                    android:id="@+id/textlay2"
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/name2"
                        android:textColor="@color/blue2"
                        android:text="Filename"
                        android:textSize="15dp"
                        android:layout_weight="0.3"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/blue2"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:text="Date"
                        android:textSize="10dp"
                        android:id="@+id/date2"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/download2"
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:src="@android:drawable/stat_sys_download"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/delete2"
                    android:layout_weight="0.6"
                    android:layout_width="0dp"
                    android:src="@android:drawable/ic_menu_delete"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
        </RelativeLayout>
</LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/lay"/>
</RelativeLayout>